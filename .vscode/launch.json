    "version": "0.2.0",
    "configurations": [
        {
            "name": "flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "justMyCode": false,
            "env": {
                "FLASK_APP": "flaskrest/app.py",
                "FLASK_ENV": "development",
            },
            // 访问地址：http://168.168.78.172:5000/static/index.html
            "args": [
                "run",
                "-h",
                "0.0.0.0",
                "-p",
                "5000",
                "--no-debugger"
            ],
            "jinja": true,
        },
        
        {
            "name": "app",
            "type": "python",
            "request": "launch",
            "program": "flask_tutorial/app.py",
            "console": "integratedTerminal"
        },
        {
            "name": "zen",
            "type": "python",
            "request": "launch",
            "program": "zen/zen.py",
            "console": "integratedTerminal",
            // "args": [
            //     "t1",
            //     "t2"
            // ]
        }
    ]
}